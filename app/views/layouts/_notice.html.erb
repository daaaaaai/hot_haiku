<div id="notice_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div id="notice_body" class="toast-body"><%= notice %></div>
    <button type="button" class="btn-close  me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

<script>
  console.log("toast check" + document.getElementById('notice_body').children.length);

  if(document.getElementById('notice_body').textContent.length != 0){
    new bootstrap.Toast(document.getElementById('notice_toast')).show();
  }
</script>