<%= form_with(model: haiku) do |form| %>
  <% if haiku.errors.any? %>
    <div style="color: red">
      <ul>
        <% haiku.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.label :author_name, style: "display: block" %>
    <%= form.text_field :author_name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
