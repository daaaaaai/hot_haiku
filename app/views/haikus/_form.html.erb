<%= form_with(model: haiku) do |form| %>
  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= form.label :author_name, class: "form-label" %>
    <%= form.text_field :author_name, placeholder: "おなまえ", class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "俳句を詠む", class: "btn btn-outline-primary" %>
  </div>

  <% if haiku.errors.any? %>
    <div class="bd-callout bd-callout-warning">
      <ul>
        <% haiku.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
